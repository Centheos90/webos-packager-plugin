{
	"type": "object",
	"additionalProperties": false,
	"required": [
		"id",
		"version",
		"app"
	],
	"properties": {
		"id": {
			"type": "string"
		},
		"version": {
			"type": "string",
			"pattern": "^(\\d+\\.)?(\\d+\\.)?(\\*|\\d+)$"
		},
		"app": {
			"type": "object"
		},
		"services": {
			"type": "array",
			"items": {
				"type": "object"
			}
		},
		"options": {
			"if": {
				"properties": {
					"emitManifest": {
						"const": true
					}
				},
				"required": [
					"emitManifest"
				]
			},
			"then": {
				"required": [
					"manifest"
				]
			},
			"properties": {
				"manifest": {
					"type": "object",
					"required": [
						"title",
						"description",
						"iconUrl",
						"sourceUrl"
					],
					"properties": {
						"title": {
							"type": "string"
						},
						"description": {
							"type": "string"
						},
						"iconUrl": {
							"type": "string"
						},
						"sourceUrl": {
							"type": "string"
						},
						"rootRequired": {
							"type": "boolean"
						},
						"type": {
							"type": "string",
							"enum": [
								"web",
								"native"
							]
						}
					}
				}
			}
		}
	}
}
